{% extends 'base-admin.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}

    <a class="btn btn-secondary mr-2" href="{{ path('category_index') }}">
        <i class="fa fa-arrow-circle-left"></i>
        {{'Back to list'|trans}}</a>
    <div class="card p-3 mt-3">
    <h1>Category</h1>
    {{ include('category/_delete_form.html.twig') }}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-primary mt-3 w-100" href="{{ path('category_edit', {'id': category.id}) }}">
            <i class="fa fa-pencil-alt"></i>
            {{'Edit'|trans}}</a>
    </div>
{% endblock %}
