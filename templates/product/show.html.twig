{% extends 'base-admin.html.twig' %}


{% block title %}Product{% endblock %}

{% block body %}
    <a class="btn btn-secondary mr-2" href="{{ path('product_index') }}">
        <i class="fa fa-arrow-circle-left"></i>
        {{'Back to list'|trans}}</a>
    <div class="card p-3 mt-3">
    <h1>Product</h1>
    {{ include('product/_delete_form.html.twig') }}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description | raw}}</td>
            </tr>
            <tr>
                <th>PrimaryImage</th>
                <td><img src="/uploads/imagep/{{ product.primaryImage }}" /></td>
            </tr>
            <tr>
                <th>SecondaryImage1</th>
                <td><img src="/uploads/images1/{{ product.secondaryImage1 }}" /></td>
            </tr>
            <tr>
                <th>SecondaryImage2</th>
                <td><img src="/uploads/images2/{{ product.secondaryImage2 }}" /></td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-primary mt-3 w-100" href="{{ path('product_edit', {'id': product.id}) }}">
            <i class="fa fa-pencil-alt"></i>
            {{'Edit'|trans}}</a>
    </div>   


    
{% endblock %}
