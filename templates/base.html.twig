                        {% if app.user %}
                        {% for role in app.user.roles %}
                                {% if role == 'ROLE_USER' %}
                                    <li>
                                        <a class="btn btn-success" href="{{ path('new_product') }}">
                                            Add Product</a>
                                    </li>
                                    <li>
                                        <a class="btn btn-warning" href="{{ path('admin_order') }}">
