<form method="post" action="{{ path('sub_category_delete', {'id': sub_category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sub_category.id) }}">
      <button class="btn btn-danger mb-3" style="float:right">Delete</button>
</form>
