{% extends 'base-admin.html.twig' %}

{% block title %}Governorate index{% endblock %}

{% block body %}
    <h1>Governorate</h1>
    <div class="mb-3">
        <a class="btn btn-primary" href="{{ path('governorate_new') }}">
            <i class="fa fa-plus"></i>
            {{'Create new'|trans}}</a>
    </div>

    <table class="table sortable-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for governorate in governorates %}
            <tr>
                <td>{{ governorate.id }}</td>
                <td>{{ governorate.name }}</td>
                <td>
                        <a class="btn btn-primary btn-sm mr-2" href="{{ path('governorate_show', {'id': governorate.id}) }}">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a class="btn btn-primary btn-sm mr-2" href="{{ path('governorate_edit', {'id': governorate.id}) }}">
                            <i class="fa fa-pencil"></i>
                        </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
