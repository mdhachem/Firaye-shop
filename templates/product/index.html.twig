{% extends 'base-admin.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>


    <table class="table sortable-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>PrimaryImage</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description | raw }}</td>
                <td><img src="/uploads/imagep/{{ product.primaryImage }}" /></td>
                <td>{{ product.price }}</td>
                <td>
                        <a class="btn btn-primary btn-sm mr-2" href="{{ path('product_show', {'id': product.id}) }}">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a class="btn btn-primary btn-sm mr-2" href="{{ path('product_edit', {'id': product.id}) }}">
                            <i class="fa fa-pencil"></i>
                        </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
