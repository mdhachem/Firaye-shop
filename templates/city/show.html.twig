{% extends 'base-admin.html.twig' %}

{% block title %}City{% endblock %}

{% block body %}


    <a class="btn btn-secondary mr-2" href="{{ path('city_index') }}">
        <i class="fa fa-arrow-circle-left"></i>
        {{'Back to list'|trans}}</a>
    <div class="card p-3 mt-3">
    <h1>City</h1>
    {{ include('city/_delete_form.html.twig') }}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ city.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ city.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary mt-3 w-100" href="{{ path('city_edit', {'id': city.id}) }}">
            <i class="fa fa-pencil-alt"></i>
            {{'Edit'|trans}}</a>
    </div>    
{% endblock %}
