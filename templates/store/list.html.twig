{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block stylesheets %}
            <link href="/assets/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css">
        {% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table sortable-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>PrimaryImage</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.description | raw }}</td>
                <td><img src="/uploads/imagep/{{ product.primaryImage }}" /></td>
                <td>{{ product.price }}</td>
                <td>
                        <a class="btn btn-primary btn-sm mr-2" style="margin-bottom: 5px;" href="{{ path('show_produit', {'id': product.id}) }}">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a class="btn btn-primary btn-sm mr-2" href="{{ path('store_product_edit', {'id': product.id}) }}">
                            <i class="fa fa-pencil"></i>
                        </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}

<script src="/assets/js/jquery.slimscroll.js"></script>
<script src="/assets/js/jquery.dataTables.min.js"></script>
<script>
    // //Sortable data tables
    $('.sortable-table').DataTable();
</script>

{% endblock %}
