{% extends 'base-admin.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User</h1>

    {% for message in app.flashes('error') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
    {% endfor %}

    <table class="table sortable-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Telephone</th>
                <th>Address</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                <td>{{ user.fisrtName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.address }}</td>
                <td>
                        <a class="btn btn-primary btn-sm mr-2" href="{{ path('user_show', {'id': user.id}) }}">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a class="btn btn-primary btn-sm mr-2" href="{{ path('user_edit', {'id': user.id}) }}">
                            <i class="fa fa-pencil"></i>
                        </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
